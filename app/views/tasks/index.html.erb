<h1>タスク一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>締切</th>
    <th>状態</th>
    <th>操作</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.title, task_path(task) %></td>
      <td><%= task.due_date %></td>
      <td><%= task.status %></td>
      <td>
        <%= link_to '編集', edit_task_path(task) %> |
        <%= link_to '削除', task_path(task), data: { turbo_method: :delete, confirm: '本当に削除しますか？' } %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to '新規タスク作成', new_task_path %>
